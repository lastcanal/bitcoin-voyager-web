{
  "name": "voyager",
  "version": "0.0.1",
  "dependencies": {
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "big.js": "^3.1.3",
    "bitcoinjs-lib": "^2.3.0",
    "bootstrap-sass": "^3.3.6",
    "bootstrap-sass-loader": "^1.0.10",
    "bower": "^1.8.0",
    "css-loader": "^0.19.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "imports-loader": "^0.6.5",
    "jquery": "^2.2.0",
    "json-loader": "^0.5.4",
    "mithril": "^0.2.0",
    "node-sass": "^3.3.3",
    "sass-loader": "^3.0.0",
    "static-loader": "^0.1.8",
    "style-loader": "^0.12.4",
    "uglify-js": "^2.7.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2"
  },
  "devDependencies": {
    "webpack-dev-server": "^1.12.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "deps": "browserify -r bitcoinjs-lib -s bitcoin | uglifyjs > build/assets/bitcoinjs.min.js",
    "build": "webpack && webpack -p --config webpack.client.config.js",
    "deploy": "webpack -p --config webpack.production.config.js && webpack -p --config webpack.client.production.config.js",
    "dev-server": "webpack-dev-server --content-base=build/ --inline"
  }
}
